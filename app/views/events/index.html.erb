 <% if user_signed_in? && (current_user.email == 'bheller2010@live.com' || current_user.email == 'sixstringjesse@gmail.com' || current_user.email == 'jamescook828@gmail.com') %>
  <h1>Listing events</h1>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Game</th>
        <th>Date</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.title %></td>
          <td><%= event.game %></td>
          <td><%= event.date %></td>
          <td><%= event.description %></td>
          <td><%= link_to 'Show', event %></td>
          <td><%= link_to 'Edit', edit_event_path(event) %></td>
          <td><%= button_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Event', new_event_path %>
<% else %>
  Only the admin can use this feature!
<% end %>